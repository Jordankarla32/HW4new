<div class="container">
  <h1 class="mb-4"><%= @place.name %></h1>

  <h2>Your Entries</h2>

  <% if @entries.any? %>
    <% @entries.each do |entry| %>
      <div class="card mb-3">
        <div class="card-body">
          <h3 class="card-title"><%= entry.title %></h3>
          <p class="card-text"><%= entry.description %></p>
          <p><strong>Date:</strong> <%= entry.occurred_on %></p>

          <% if entry.image.attached? %>
  <div class="mt-3">
    <p><strong>Image:</strong></p>
    <%= image_tag entry.image, class: "img-fluid rounded" %>
  </div>
<% end %>

        </div>
      </div>
    <% end %>
  <% else %>
    <p>You have no entries for this place.</p>
  <% end %>

  <p><a href="/entries/new?place_id=<%= @place.id %>" class="btn btn-primary">New Entry</a></p>
  <p><a href="/places" class="btn btn-secondary">Back to All Places</a></p>
</div>
