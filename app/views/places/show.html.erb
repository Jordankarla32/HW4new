<h1><%= @place["name"] %></h1>

<h2>Your Entries</h2>
<% if @entries.any? %>
  <% @entries.each do |entry| %>
    <div>
      <h3><%= entry["title"] %></h3>
      <p><%= entry["description"] %></p>
      <p><strong>Date:</strong> <%= entry["occurred_on"] %></p>
    </div>
  <% end %>
<% else %>
  <p>You have no entries for this place.</p>
<% end %>

<p><a href="/entries/new?place_id=<%= @place["id"] %>">New Entry</a></p>
<p><a href="/places">Back to All Places</a></p>
